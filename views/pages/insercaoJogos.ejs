<!DOCTYPE html>
<html lang="pt_br">

    <%- include('../partials/head.ejs') %>

<body>
    <%- include('../partials/header.ejs') %>
    <main>
        <% if (message) { %>
            <div class="modal">
                <button>x</button>
               <p><%= message %></p>
            </div>
           <% } %>
        <section>
            <form action="/insercaoJogos" method="post" class="login-card">
                <h3>Inserir jogos</h3>
                <p>Preencha os campos abaixo</p>
                <label for="nome">Nome</label>
                <input name="nome" type="text" required>
                <label for="ram">RAM</label>
                <input name="ram" type="number" required>
                <label for="armazenamento">Armazenamento</label>
                <input name="armazenamento" type="number" required>
                <label for="estilo">Estilo:</label>
                <select name="estilo" required>
                    <option value="" selected disabled hidden></option>
                    <% for( let estilo of estilos ) { %>
                        <option value="<%= estilo.id %>"><%= estilo.nome %></option>
                    <% } %>
                </select>
                <label for="preco">R$</label>
                <input type="number" min="0.00" max="999999.99" step="0.01" name="preco" required>
                <label for="tier">Tier</label>
                <input type="number" min="1" max="7" name="tier" required>
                <input class="p-button" type="submit">
            </form>
        </section>
    </main>
    
</body>
</html>