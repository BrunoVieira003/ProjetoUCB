<!DOCTYPE html>
<html lang="pt_br">

    <%- include('../../partials/head.ejs') %>

<body>
    <%- include('../../partials/header.ejs') %>
    <main>
        <% if (message) { %>
            <div class="modal">
                <button>x</button>
               <p><%= message %></p>
            </div>
           <% } %>
        <section>
            <form action="/videocards/<%= videocard.id %>/edit?_method=PUT" method="post" class="login-card">
                <h3>Modificar placa de v√≠deo</h3>
                <p>Preencha os campos abaixo</p>
                <label for="modelo">Modelo</label>
                <input name="modelo" type="text" required value="<%= videocard.modelo %>">
                <label for="tier">Tier</label>
                <input type="number" min="1" max="7" name="tier" required value="<%= videocard.tier %>">
                <input class="p-button" type="submit">
            </form>
        </section>
    </main>
    
</body>
</html>